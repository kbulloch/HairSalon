<html>
<head>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
    <title></title>
</head>
<body>
    <div class="container">
        <h1>All Stylists at Solar Salon</h1>

        <form action="/stylists" method="post">
            <div class="form-group">
                <label for="stylist_name">Enter a new Stylist name</label>
                <input type="text" name="stylist_name" class="form-control">
            </div>
            <button type="submit" class="btn btn-warning">Add Stylist!</button>
        </form>

        {% if stylists is not empty %}
            {% for stylist in stylists %}
                <ul>
                    <li>{{ stylist.getName }}</li>
                </ul>
            {% endfor %}
        {% endif %}
    </div>
</body>
</html>
